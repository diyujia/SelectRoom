<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45.0dp">
    
    <RelativeLayout
        android:id="@+id/usual_top"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/usual_top_return"
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:src="@drawable/top_return"
            android:layout_marginTop="2.0dp"
            android:layout_marginLeft="2.0dp"/>
        <ImageView
            android:id="@+id/usual_top_seperator"
            android:layout_width="1.0dp"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dp"
            android:layout_marginLeft="2.0dp"
            android:layout_toRightOf="@id/usual_top_return"
            android:background="#A71717"/>
        <TextView
            android:id="@+id/usual_top_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/usual_top_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北大软件与微电子学院"
            android:textColor="#ffffffff"
            android:textSize="22.0sp"/>
        <ImageView
            android:id="@+id/usual_top_home"
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/top_home"
            android:visibility="visible"
            android:layout_marginTop="2.0dp"/>
        <ImageView
            android:id="@+id/usual_top_exit"
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:layout_toLeftOf="@id/usual_top_home"
            android:src="@drawable/top_exit"
            android:layout_marginTop="2.0dp"
            android:layout_marginRight="2.0dp"/>
    </RelativeLayout>
</RelativeLayout>
